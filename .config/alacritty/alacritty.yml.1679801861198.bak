font:
  normal:
    family: Sarasa Term SC Nerd
    style: Regular
  bold:
    family: Sarasa Term SC Nerd
    style: Bold
  italic:
    family: Sarasa Term SC Nerd
    style: Italic
  bold_italic:
    family: Sarasa Term SC Nerd
    style: BoldItalic
  size: 10

  offset:
    x: 0
    y: 0

cursor:
  style: beam

window:
  opacity: 0.8
  dimensions:
    x: 0
    y: 0
  padding:
    x: 0
    y: 0
  dynamic_padding: true
  # decorations: none 
  decorations: full
  title: Terminal

draw_bold_text_with_bright_colors: true

selection:
  semantic_escape_chars: ',â”‚`|:" ()[]{}<>'
  save_to_clipboard: true
colors:
  # Default colors
  primary:
    background: '0x1E1D2F'
    foreground: '0xD9E0EE'

  cursor:
    text: '0x1E1D2F'
    cursor: '0xF5E0DC'

  # Normal colors
  normal:
    black: '0x6E6C7E'
    red: '0xF28FAD'
    green: '0xABE9B3'
    yellow: '0xFAE3B0'
    blue: '0x96CDFB'
    magenta: '0xF5C2E7'
    cyan: '0x89DCEB'
    white: '0xD9E0EE'

  # Bright colors
  bright:
    black: '0x988BA2'
    red: '0xF28FAD'
    green: '0xABE9B3'
    yellow: '0xFAE3B0'
    blue: '0x96CDFB'
    magenta: '0xF5C2E7'
    cyan: '0x89DCEB'
    white: '0xD9E0EE'

  indexed_colors:
    - { index: 16, color: '0xF8BD96' }
    - { index: 17, color: '0xF5E0DC' }
theme: Catppuccin
